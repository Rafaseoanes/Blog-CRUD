<%- include('_header.ejs') %>


  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<!--comentario-->
  <style>
    body {
      background: rgb(245, 245, 245);

    }

    .card {
      box-shadow: 0 3px 3px rgba(0, 0, 0, 0.12);
      border-radius: 8px;
    }

    .card-img-top {
      height: 180px;
      object-fit: cover;
    }

    .card-title {
      color: #737e87;
    }

    .btn {
      background: #ee5544;
      border: none;
    }

    .btn:hover {
      background: #eb3420;
;
      border: none;
    }

    .btn-warning {
      background: #ffdb8d;
    }

    .btn-warning:hover {
      background: #ffc272;
    }

    #autor {
      margin-top: 10px;
      color: #737e87;
    }

    .row {
      padding: 0 20px;
    }

    @media (max-width: 768px) {

      .card-img-top {
        height: 120px;
        object-fit: cover;
      }

      .card-title {
        font-size: small;
      }

      #autor {
        font-size: x-small;
        
      }
    }

    @media (max-width: 950px) {

      .card-title {
        font-size: medium;
      }

    }

    @media (max-width: 575px) {


      .card-img-top {
        height: 180px;
        object-fit: cover;
      }

    }
  </style>

  <body>
    <br>

    <br>

    <div class="row">
      <% for(var i=0; i < tarjetas.length; i++){ %>
        <div class="col-sm-4">
          <div class="card" style="margin: 20px; height: 380px;">
            <div class="card-body">
              <h5 class="card-title">
                <%= tarjetas[i].titulo %>
              </h5>
              <img src="<%= tarjetas[i].url %>" class="card-img-top" alt="...">
              <br>
              <p class="card-title" style="margin-top: 10px;">
                <%= tarjetas[i].autor %>
              </p>
              <a href="/mostrar/<%= tarjetas[i]._id %>" class="btn btn-danger">Ver mas</a>
              <a href="/modificar/<%= tarjetas[i]._id %>" class="btn btn-warning">Editar</a>


            </div>
          </div>
        </div>
        <% } %>
    </div>



    
  </body>

  </html>



