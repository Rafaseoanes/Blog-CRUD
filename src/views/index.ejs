<style>
  body{
    background:rgb(250, 250, 250);
    
  }
  .card{
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.12);
    border-radius: 8px;
  }
  .card-img-top{
    height: 180px;
    object-fit: cover;
  }

  .card-title{
    color: #737e87;
  }
  .btn{
    background: #4693d6;
    border: none;
  }
  .btn-warning{
    background: #ffdb8d;
  }
  #autor{
    margin-top: 10px;
    color: #737e87;
  }
  .row{
    padding: 0 20px;
  }
  @media (max-width: 768px) {
    
    .card-img-top{
    height: 120px;
    object-fit: cover;
  }
  .card-title{
    font-size: small;
  }
  #autor{
    font-size: x-small;
  }
  }
  @media (max-width: 950px) {
    
  .card-title{
    font-size: medium;
  }
  
  }
  @media (max-width: 575px) {
    
    
    .card-img-top{
    height: 180px;
    object-fit: cover;
  }
    
    }

</style>


  <body>
    <br>
 

    <div class="row">
      <% for(var i=0; i < tarjetas.length; i++){ %>
      <div class="col-sm-4">
        <div class="card" style="margin: 20px; height: 380px;">
          <div class="card-body">
            <h5 class="card-title"><%= tarjetas[i].titulo %></h5>
            <img src="<%= tarjetas[i].url %>" class="card-img-top" alt="..." >
            <br>
            <p id="autor" class="card-title"><%= tarjetas[i].autor %></p>
            <a href="/vermas/<%= tarjetas[i]._id %>" class="btn btn-primary">Ver mas</a>
            <a href="/modificar/<%= tarjetas[i]._id %>" class="btn btn-warning">Editar</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>


