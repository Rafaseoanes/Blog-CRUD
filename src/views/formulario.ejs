<%- include('_header.ejs') %>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <body>
    <style>
      body {
        background: rgb(240, 240, 240);
      }
      .h1{
       color: #4693d6;
      }
    </style>

    <div class="container px-5 my-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card border-0 rounded-3 shadow-lg">
            <div class="card-body p-4">
              <div class="text-center">
                <div class="h1 fw-light">Nuevo Articulo</div>
                <p class="mb-4 text-muted">Ingrese aqui la informaci√≥n de su articulo</p>
              </div>

              <form action="/crear" method="post">
                <div class="form-floating mb-3">
                  <label>Titulo</label>
                  <input class="form-control" name="titulo" type="text" placeholder="Ingresar el titulo del articulo" />
                </div>
                <div class="form-floating mb-3">
                  <label>Link Imagen</label>
                  <input class="form-control" name="url" type="text" placeholder="Ingresar el link de la imagen" />
                </div>
                <div class="form-floating mb-3">
                  <label>Autor</label>
                  <input class="form-control" name="autor" type="text" placeholder="Ingresar el autor del articulo" />
                </div>
                <div class="form-floating mb-3">
                  <label>Fecha de Publicacion</label>
                  <input class="form-control" name="fecha" type="date" placeholder="Ingresar la fecha de publicacion" />
                </div>
                <div class="form-floating mb-3">
                  <label>Categoria</label>
                  <select name="categoria" id="">
                    <option value="">Tecnologia</option>
                    <option value="">Desarrollo web</option>
                    <option value="">Hardware</option>
                    <option value="">Software</option>
                  </select>
                </div>
                <div class="form-floating mb-3">
                  <label>Etiqueta</label>
                  <input class="form-control" name="etigueta" type="text" placeholder="Ingresar las etiquetas del articulo" />
                </div>
                <div class="form-floating mb-3">
                  <label>Contenido</label>
                  <textarea class="form-control" name="texto" type="text" style="height: 10rem;"
                    placeholder="Ingresar el contenido del articulo"></textarea>
                </div>
                <div class="d-grid">
                  <button class="btn btn-primary btn-lg disabled" id="enviar" type="submit">Enviar</button>
                </div>
              </form>


            </div>
          </div>
        </div>
      </div>
    </div>

  </body>

  </html>

